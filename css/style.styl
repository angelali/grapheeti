// Mixins

border-box()
  box-sizing: border-box
  -moz-box-sizing: border-box

unselectable()
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none

// Page styles

html, body
  unselectable()

  height: 100%
  margin: 0
  padding: 0
  font-family: "Raleway", sans-serif

#instructions
  border-box()
  float: left
  height: 100%
  width: 280px
  padding: 40px 20px
  background: #333
  color: #DDD

  h1
    margin: 0
    font-size: 36px
    font-weight: 100

  p
    margin: 4px 0 0
    font-size: 12px

// Canvas

svg
  background: #EEE
  cursor: crosshair

circle
  background: #AAA
  cursor: pointer

line
  stroke: #CCC
  stroke-width: 3px
  cursor: pointer